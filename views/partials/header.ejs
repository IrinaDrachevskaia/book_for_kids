            <ul class="dropdown-menu text-small shadow mx-2">
              <li><a class="dropdown-item" href="/" aria-current="page">All</a></li>
              <li><hr class="dropdown-divider"></li>
              <% categories.forEach((category) => { %>
                <li><a class="dropdown-item" href="/category/<%= category.category_id %>"><%= category.category %></a></li>
              <% }); %>
            </ul>
          </div>
    
          <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-end">
            <form class="w-50 me-3 d-flex align-items-center justify-content-center justify-content-lg-end" action="/search" method="post" role="search">
              <input type="search" name="search" class="form-control border-warning-subtle mx-3" placeholder="Search..." aria-label="Search" style="min-width: 100px;">
              <button type="submit" class="btn mx-1" style="background-color: #FFAD84; border-radius: 5px; color: black;" onmouseover="this.style.backgroundColor='#ffca2c';"
              onmouseout="this.style.backgroundColor='#FFC47E';" onmouseleave="this.style.backgroundColor='#FFAD84';">Search</button>
            </form>

            <a href="/add"><button type="button " class="btn mx-1" style="background-color: #FFAD84; border-radius: 5px; color: black;" onmouseover="this.style.backgroundColor='#ffca2c';"
            onmouseout="this.style.backgroundColor='#FFC47E';" onmouseleave="this.style.backgroundColor='#FFAD84';">
              Add New Book
            </button></a>
    

          </div>
        </div>
      </header>

 